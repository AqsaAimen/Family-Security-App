<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="160sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16sp"
        app:cardCornerRadius="16sp"
        app:cardElevation="16sp"
        android:id="@+id/card">
    <ImageView
        android:id="@+id/image"
        android:layout_width="100sp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@id/card"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintBottom_toBottomOf="@id/card"
        android:layout_margin="10sp"
        android:src="@drawable/uu2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="110sp"
            android:layout_marginTop="20sp"
            android:id="@+id/text"
            android:text="Lokash Kidea "
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_margin="70sp"
            android:layout_marginLeft="30sp"
            android:src="@drawable/location9" />
<TextView
    android:ellipsize="end"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="140sp"
    android:layout_marginTop="60sp"
    android:id="@+id/text2"
    android:text="Shuisong Building, Tairan 9th Road,Futiyan,Shenzhen "
    android:textColor="#B8B4B4"
    app:layout_constraintTop_toTopOf="parent"
    android:textSize="15sp"
    android:textStyle="bold"/>


        <ImageView

            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginStart="20sp"
            android:src="@drawable/charg"
            android:layout_marginTop="120sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/image"
            app:layout_constraintBottom_toBottomOf="@id/image"/>
   <TextView
       android:id="@+id/battery"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="93%"
       android:textSize="15sp"
       android:textColor="#374CBF"
       android:layout_marginTop="120sp"
       android:layout_marginStart="53sp"
       />
        <ImageView
            android:layout_marginTop="120sp"
            android:src="@drawable/plane"
            android:layout_marginStart="105sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="223M"
            android:textSize="15sp"
            android:textColor="#B8B4B4"
            android:layout_marginTop="120sp"
            android:layout_marginStart="130sp"
            />
        <ImageView
            android:layout_marginTop="120sp"
            android:src="@drawable/wifi"
            android:layout_marginStart="200sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WIFI"
            android:textSize="15sp"
            android:textColor="#B8B4B4"
            android:layout_marginTop="120sp"
            android:layout_marginStart="225sp"
            />
        <ImageView
            android:layout_marginTop="115sp"
            android:src="@drawable/call1"
            android:layout_marginEnd="30sp"
            android:layout_marginBottom="10sp"
            android:layout_marginStart="275sp"
            android:layout_width="60sp"
            android:layout_height="30sp"
            />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>